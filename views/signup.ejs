<%- include("templates/header") %>
<div class="container">
<h1>Sign Up</h1>
<form class="mb-4 container" action='/submituser' method='post'>
<input class="row" name='username' type='text' placeholder='username'>
<input class="row" name='email' type='email' placeholder='email'>
<input class="row" name='password' type='password' placeholder='password'>
<button class="row">Submit</button>
</form>

<% if (anotherAccount){ %>
    <p class="text-danger">There is already another account using that email!</p>
<% } %>
<% if (nameMissing){ %>
    <p class="text-danger">Username Missing!</p>
<% } %>
    <% if (emailMissing){ %>
    <p class="text-danger">Email Missing!</p>
<% } %>
<% if (passwordMissing){ %>
    <p class="text-danger">Password Missing!</p>
<% } %>

</div>

<%- include("templates/footer") %>